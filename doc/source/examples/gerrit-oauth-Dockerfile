FROM centos:8.2.2004
# Adapted from https://github.com/GerritCodeReview/docker-gerrit/blob/master/centos/8/Dockerfile

ENV GERRIT_MAJOR_VERSION 3.3
ENV GERRIT_OAUTH_PLUGIN_VERSION stable-${GERRIT_MAJOR_VERSION}
ENV GERRITFORGE_URL https://gerrit-ci.gerritforge.com
ENV GERRITFORGE_ARTIFACT_DIR lastSuccessfulBuild/artifact/bazel-bin/plugins
ENV GERRIT_HOME /var/gerrit

# Add Gerrit packages repository
RUN rpm -i https://gerritforge.com/gerritforge-repo-1-2.noarch.rpm

ADD etc_gerrit/entrypoint.sh /

# Install OS pre-prequisites, OpenJDK and Gerrit in two subsequent transactions
# (pre-trans Gerrit script needs to have access to the Java command)
RUN yum -y install initscripts && \
    yum -y install java-11-openjdk && \
    yum -y install python3 python3-pip && \
    yum -y install gerrit-${GERRIT_MAJOR_VERSION}.1-1 && \
    /entrypoint.sh init && \
    rm -f /var/gerrit/etc/{ssh,secure}* && rm -Rf /var/gerrit/{static,index,logs,data,index,cache,git,db,tmp}/* && chown -R gerrit:gerrit /var/gerrit && \
    yum -y clean all

# Enable LEGACY security policies by default (for TLS 1.0/1.1 compatibility)
RUN update-crypto-policies --set LEGACY

# install pynotedb
RUN cd / && git clone https://softwarefactory-project.io/r/software-factory/pynotedb.git
RUN cd /pynotedb && python3 setup.py install

ADD etc_gerrit/gerrit_admin_key.pub /
RUN chown gerrit:gerrit /gerrit_admin_key.pub

USER gerrit

# install oauth2 plugin
RUN curl -fSsL ${GERRITFORGE_URL}/job/plugin-oauth-bazel-master-${GERRIT_OAUTH_PLUGIN_VERSION}/${GERRITFORGE_ARTIFACT_DIR}/oauth/oauth.jar -o ${GERRIT_HOME}/plugins/oauth.jar

# Disable out of the box experience
RUN touch /var/gerrit/.firstTimeRedirect

# pre-provision admin user
RUN git config --global user.email "admin@example.com" && \
    git config --global user.name "Gerrit Admin"

# Allow incoming traffic
EXPOSE 29418 8080

VOLUME ["/var/gerrit/git", "/var/gerrit/index", "/var/gerrit/cache", "/var/gerrit/db", "/var/gerrit/etc"]

ENTRYPOINT ["/entrypoint.sh"]
